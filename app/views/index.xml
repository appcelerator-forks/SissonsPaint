<Alloy>
    <Widget id="drawer" src="nl.fokkezb.drawer" >

        <Window module="xp.ui" title="test" role="leftWindow" id="mainWindow" backgroundColor="black" fullscreen="true">
            <ImageView id="logo" image="/images/menu_logo.png" width="150" top="30"/>
            <TableView id="menuTable" top="100" onClick="doMenuClick" separatorColor="black" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER">
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">DIY Paint</Label>
				</TableViewRow>
				
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">Colour Picker</Label>
				</TableViewRow>
				
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">Colour Swatches</Label>
				</TableViewRow>
				
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">Brochure</Label>
				</TableViewRow>
				
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">Store Locator</Label>
				</TableViewRow>
				
				<TableViewRow height="50">
					<Label width="Ti.UI.FILL" left="30" color="white">About Us</Label>
				</TableViewRow>
		    </TableView>
		    <Label id="tnc" color="white" bottom="20">TERM & CONDITIONS | 2014 COPYRIGHT</Label>
        </Window>
        
        <Window id="centerWindow" module="xp.ui" platform="android" role="centerWindow">
        	<View id="toggle" layout="horizontal" height="80" top="0">
				<Require src="toggle"></Require>
				<Label class="title" color="black" width="75%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">DIY Paint</Label>
			</View>
        	<Require type="view" src="colourSwatches" />
        </Window>

    </Widget>
</Alloy>