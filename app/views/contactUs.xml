<Alloy>
	<View id="mainView" top="10" left="10" right="10" backgroundColor="white" class="container">
		<View layout="vertical" top="0" height="Ti.UI.SIZE">
			<View layout="horizontal" height="80" backgroundImage="/images/banner_about_us.jpg">
				<Require src="toggle"></Require>
				<!--<Label class="title" color="black" width="75%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">About Us</Label>-->
			</View>
			<ScrollView id="mainScroll" layout="vertical" height="Ti.UI.SIZE" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER">
			 
				<View layout="vertical" backgroundColor="white" height="Titanium.UI.SIZE">
					 
					<View layout="horizontal" height="40" top="10" bottom="15" width="94%" horizontalWrap="true">
						<Label class="description_content" color="#6E6E6E" width="40%">Name</Label>	
						<TextField id="name" hintText="Name" class="inputField" width="60%" />
					</View>
					<View layout="horizontal" height="40" top="10" bottom="15" width="94%" horizontalWrap="true">
						<Label class="description_content" color="#6E6E6E" width="40%">Email</Label>	
						<TextField id="email" hintText="Email Address" class="inputField" width="60%" />
					</View> 
					<View layout="horizontal" height="40" top="10" bottom="15" width="94%" horizontalWrap="true">
						<Label class="description_content" color="#6E6E6E" width="40%">Phone Number</Label>	
						<TextField id="phone" hintText="Phone Number" class="inputField" width="60%" />
					</View>
					<View  layout="horizontal" height="100" top="10" bottom="15" width="94%" horizontalWrap="true">
						<Label class="description_content" color="#6E6E6E" width="40%">Message</Label>	
						<TextField id="message" hintText="Message" class="inputField" width="60%" />
					</View>
					 
			    </View>
			    
		    </ScrollView>
	    </View>
		<!--</ScrollView>-->
		<View height="60" bottom="0" id="toolbar" width="100%" backgroundImage="/images/tool_bar.jpg">
			<View layout="horizontal" width="100%">
				<View width="40%">
				</View>
				<View width="20%">
					<ImageView id="contactButton" image="/images/icon_email.png" onClick="submitContactForm" height="40" width="50" top="10" bottom="10" />
				</View>
				<View width="40%">
				</View>
			</View>
