<Alloy> 
 
	<View   textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"  class="container" id="colourDetails">
		<View layout="vertical">
			
			<View layout="vertical" backgroundColor="#ffffff" top="10" width="160" height="160">
				<View layout="vertical"  width="150" top="5" height="150" bottom="45" id="boxDetails"  opacity="0.6" >
				 	<Label class="title" left="10" id="colourCode" top="10" />
				 	<Label class="title" left="10" id="colourName" />
				 	<View layout="horizontal" width="100%" height="20"  >
				 		<Label class="cCodeTitle" left="10" >C </Label>
				 		<Label class="cCode" right="5" id="colourC" ></Label>
				 	</View>
				 	
				 	<View layout="horizontal" width="100%" height="20" >
				 		<Label class="cCodeTitle" left="10" >M </Label>
				 		<Label class="cCode" right="10" id="colourM" ></Label>
				 	</View>
				 	
				 	<View layout="horizontal" width="100%" height="20">
				 		<Label class="cCodeTitle" left="10" >Y </Label>
				 		<Label class="cCode" right="10" id="colourY" ></Label>
				 	</View>
				 	
				 	<View layout="horizontal" width="100%" height="20">
				 		<Label class="cCodeTitle" left="10" >K </Label>
				 		<Label class="cCode" right="10" id="colourK"   ></Label>
					</View>
				</View>
			</View>

			
		</View>
		<View  layout="vertical" bottom="60" height="Ti.UI.SIZE" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER">
			<View layout="vertical" height="Titanium.UI.SIZE">
				<ImageView image="/images/scroll_up.png" width="Titanium.UI.FILL" />
			</View>
			<View layout="vertical" height="Titanium.UI.SIZE" backgroundColor="#ffffff">
				<Label class="titleLabel" color="black" width="95%" >Colour Category</Label>
			</View>
			<ScrollView bottom="0" id="main" backgroundColor="white" layout="vertical" height="220" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER" >
				<ImageView id="colourCategoryImage"/>
				<Label id="colourCategoryDescription" class="aboutContent" width="95%"></Label>	
			</ScrollView>
				
		</View>
		<View height="60" bottom="0">
				<ImageView image="/images/tool_bar.jpg" height="60" width="Titanium.UI.FILL" />
				<ImageView id="favButton"  onClick="popWindow" height="40" width="50" />
		</View>
	</View> 
	
</Alloy>