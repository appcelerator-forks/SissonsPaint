<Alloy>
	<View id="diyPaint">
		<View class="container">
			<View id="toggle" layout="horizontal" height="80" top="0">
				<Require src="toggle"></Require>
				<Label class="title" color="black" width="75%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">DIY Paint</Label>
				
			</View>
			
			<WebView id='canvas' url="/html/canvas-paint-bucket.html" height="200" enableZoomControls="false" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER" />
			<View layout="vertical" height="330" bottom="-330" id="colorSwatches">
				<ImageView image="/images/scroll_up.png" backgroundColor="transparent" width="Titanium.UI.FILL" />
				<View id="bottomColorBar" layout="vertical" backgroundColor="white">
					<Label class="smallTitle" color="black" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" bottom="10" >FAVOURITE COLOURS</Label>
					<ScrollView id="recommendView" backgroundColor="white" layout="horizontal" scrollType="horizontal" height="50" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER">
						<!--<Button id="savePicture" onClick="savePicture">Save</Button>-->
					</ScrollView>
					<ImageView image="/images/scroll_up.png" backgroundColor="transparent" width="Titanium.UI.FILL" />
					<Label class="smallTitle" color="black" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" bottom="10" >COLOUR LIBRARY</Label>
					<ScrollView id="scrollView" backgroundColor="white" layout="vertical" scrollType="horizontal" height="150" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER"></ScrollView>
				</View>
			</View> 
			<View height="60" bottom="0" width="100%" id="sizeBar">
				<Slider id="slider" min="0" max="100"  value="20" onStop="updateAdjustment"/>
			</View>
			<View height="60" bottom="0" id="toolbar">
				<ImageView image="/images/tool_bar.jpg" height="60" width="Titanium.UI.FILL" />
				<ImageView id="photoButton" image="/images/icon_photo.png" left="5" onClick="takePhoto" height="40" width="50" />
				<ImageView id="tools" image="/images/icon_bucket.png" left="65" onClick="toolspop" height="40" width="50" />
				<ImageView id="size" image="/images/icon_size.png" left="125" mod="size" onClick="slideUp" height="40" width="50" />
				<View id="color" backgroundColor="#ffffff" left="185" height="40" width="50" mod="color" onClick="slideUp" borderColor="#000000" borderWidth="3" borderRadius="10" />
				<ImageView id="" image="/images/icon_share.png" left="245" onClick="share" height="40" width="50" />
			</View>
		</View>
 
	</View>
</Alloy>