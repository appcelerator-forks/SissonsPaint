<Alloy>
	<View id="mainView" layout="vertical" class="container">
		 <View layout="horizontal" id="toggle" height="80">
			<Require src="toggle"></Require>
			<Label class="title" color="black" width="75%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Colour Picker</Label>
		</View>
		<WebView   id='canvas' url="/html/colour_picker.html" height="40%" enableZoomControls="false"/>
		<View height="50%" bottom="0">
			<View id="bottomColorBar" layout="vertical">
				<ImageView image="/images/scroll_up.png" backgroundColor="transparent" width="Titanium.UI.FILL" bottom="10" />
				<Label class="smallTitle" color="black" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" bottom="10" >RECOMMEND COLOURS</Label>
				<ScrollView id="recommendView" backgroundColor="white" layout="vertical" scrollType="horizontal" height="50"></ScrollView>
				<ImageView image="/images/scroll_up.png" backgroundColor="transparent" width="Titanium.UI.FILL" bottom="10" />
				<Label class="smallTitle" color="black" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" bottom="10" >COLOUR LIBRARY</Label>
				<ScrollView id="scrollView" backgroundColor="white" layout="vertical" scrollType="horizontal" height="100"></ScrollView>
			</View>
		</View>
	</View> 
</Alloy>